    .popup {
        width: 400px;
        position: absolute;
        top: 0;
        left: 50%;
        transform: translate(-50%, -50%) scale(0.1);
        background-color: rgb(197, 217, 197);
        align-items: center;
        padding: 0 30px 30px;
        color: #333;
        text-align: center;
        justify-content: center;
        visibility: hidden;
        transition: transform 0.4s, top 0.4s;
    }

    .popupOpen {
        top: 100%;
        transform: translate(-50%, -50%) scale(1);
        visibility: visible;
    }

    .popup button {
        width: 100%;
        margin-top: 50px;
        padding: 10px 0;
