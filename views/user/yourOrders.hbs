    <style>
        body {
            background-color: #f8f9fa;
        }

        .profile-container {
            max-width: 600px;
            margin: 50px auto;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .profile-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 20px;
        }

        .profile-details {
            text-align: center;
        }

        .profile-details p {
            margin: 10px 0;
        }
        /* Custom styling for pagination buttons */
    .page-link {
        color: #007bff; /* Blue color */
        background-color: transparent;
        border: 1px solid #007bff;
        border-radius: 0.25rem;
        padding: 0.375rem 0.75rem;
        transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out,
            border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .page-link:hover {
        color: #0056b3; /* Darker blue color on hover */
        background-color: #f8f9fa; /* Light gray background on hover */
        border-color: #007bff; /* Blue border color on hover */
    }

    .page-link:focus {
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25); /* Blue focus shadow */
    }

    .page-item.active .page-link {
        z-index: 1;
        color: #fff;
        background-color: #007bff; /* Blue color for active button */
        border-color: #007bff; /* Blue border color for active button */
    }
     
    </style>

</head>


<body>

    {{> user_Header}}

    <main>
        <!-- Hero Area Start-->
        <div class="slider-area ">
            <div class="single-slider slider-height2 d-flex align-items-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="hero-cap text-center">
                                <h2>Your Orders</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Hero Area End-->




        <!--================Single Product Area =================-->


        <div class="product_image_area  ">
            <div class="container">
                
                <div class="table-responsive">
                    <table class="table align-middle">
                        <h2>Order Summary</h2>
                        <thead>
                            <tr>
                                <th>Order Id</th>
                                <th>Price</th>
                                <th>Date</th>
                                <th>Quantity</th>
                                <th>Status</th>
                                <th>Order Details</th>
                                <th>Downloads </th>

                            </tr>
                        </thead>
                        {{#each destructuredData}}
                        <tbody>


                            <tr>

                                <td>{{this.orderId}}</td>


                                <td>{{this.totalAmount}}</td>

                                <td>
                                    {{formatDate this.date}}
                                </td>
                                <td>{{this.quantity}}</td>
                                <td>
                                    {{#ifEquals this.status "Payment Failure"}}
                                    <p style="color: red; font-size: 20px;">Payment Failed</p>
                                    {{else}}
                                    <p style="color:green; font-size: 20px;">{{this.status}}</p>
                                    {{/ifEquals }}
                                </td>
                                <td>
                                    <a class="btn btn-info" href="/userorderdetails?orderId={{this.orderId}}">Order
                                        Details</a>
                                </td>
                                <td>
                                    {{#ifEquals this.status "DELVERED"}}
                                    <a class="btn btn-info" href="/invoice?orderId={{this.orderId}}">Invoice
                                        Download</a>
                                    {{else}}
                                    <a class="btn btn-info" href="javascript:void(0)" onclick="return false;"
                                        style="color: #999; pointer-events: none; text-decoration: none; cursor: not-allowed;">Invoice
                                        Download</a>

                                    {{/ifEquals}}

                                </td>

                            </tr>



                        </tbody>
                        {{/each}}
                    </table>
                </div>
            </div>
        </div>
        <br>

        <div class="pagenation">
            <nav aria-label="...">
                <ul class="pagination justify-content-start"> <!-- Added justify-content-start class -->
                    <div class="showing col col-xs-12" style="margin-left: -250px;">
                        <span>SHOWING OF </span>
                    </div>

                    {{#if currentValue}}
                    <li class="page-item">
                        <a class="page-link"
                            href="/orderhistorypagenation?previous=1&page={{currentValue}}">Previous</a>
                    </li>
                    {{/if}}
                    <li class="page-item">
                        <a class="page-link" href="/orderhistorypagenation?next=2&page={{currentValue}}">Next</a>
                    </li>
                </ul>
            </nav>
        </div>

<br>
<br>
<br>    

        <!--================End Single Product Area =================-->


        <!-- subscribe part here -->
        <section class="subscribe_part section_padding">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="subscribe_part_content">
                            <h2>Get promotions & updates!</h2>
                            <p>Seamlessly empower fully researched growth strategies and interoperable internal or
                                “organic” sources credibly innovate granular internal .</p>
                            <div class="subscribe_form">
                                <input type="email" placeholder="Enter your mail">
                                <a href="#" class="btn_1">Subscribe</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- subscribe part end -->
    </main>


    {{> user_Footer}}



