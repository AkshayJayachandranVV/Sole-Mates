                                <h2>ADD TO CART</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Hero Area End-->
        <!--================login_part Area =================-->
        <section class="login_part section_padding ">
            <div class="container">
                <div class="row align-items-center">



                    <!-- 

            write the code here
         -->



                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Remove</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            {{#each displayCart}}
                            <tbody>

                                <tr>
                                    {{!-- <td><img src="{{this.imagepath.[0]}} alt=" product image" class=" w-50 h-50""></td> --}}
                                 <td><img src=" {{this.imagepath}}" alt="Image Alt Text" class=" w-25 h-25"></td>
                                    <td>{{this.productname}}</td>
                                    {{!-- <td class="align-top">This cell is </td> --}}

                                    <td>{{this.price}}</td>
                                    <td>
                                        {{!-- <div class="product_count_area">
                                            <p>Quantity</p>
                                            <div class="product_count d-inline-block">
                                                <span class="product_count_item inumber-decrement"><a
                                                        href="/decrementquantity"></a> <i class="ti-minus"></i></span>
                                                <input class="product_count_item input-number" type="text" value="1"
                                                    min="0" max="10">
                                                <span class="product_count_item number-increment"><a
                                                        href="/incrementquantity"></a> <i class="ti-plus"></i></span>
                                            </div>

                                        </div> --}}

                                        

                                        <span class="input-group-btn-vertical">
                                            {{#ifNotEquals this.quantity "10"}}
                                            <button class="btn btn-touchspin js-touchspin bootstrap-touchspin-up p-3 "
                                                type="button" {{!--
                                                onclick="quantityChange('{{this.product}}' ,'{{this.quentity}}',1)">
                                                --}}
                                                ><a href="/incrementquantity/{{this.productname}}">
                                                    +
                                                </a>
                                            </button>
                                            {{/ifNotEquals}}
                                            <br>
                                            <br>
                                          <p class="input-group form-control" id="countUpdate">{{this.quantity}}</p>
                                          {{#ifNotEquals this.quantity "1"}}
                                            <button class="btn btn-touchspin js-touchspin bootstrap-touchspin-down p-3"
                                                type="button" {{!--
                                                onclick="quantityChange('{{this.product}}' ,'{{this.quentity}}',-1)">
                                                --}}
                                                ><a href="/decrementquantity/{{this.productname}}">
                                                    -
                                                </a>
                                            </button>
                                            {{/ifNotEquals}}
                                           
                                                     </span>
                                    </td>
                                    <td><button class="btn btn-primary"><a
                                                href="/removecart/{{this.productname}}">Remove</a></button>
                                    </td>
                                    <td>
                                        {{multiply this.price this.quantity}}
                                    </td>

                                </tr>
                            </tbody>
                            {{/each}}
                        </table>

                        <div class="total">
                            <label class="name" for="total"><strong>Total:</strong></label>
                            <input type="Number" id="total" name="Number" class="form-control" value="{{totalAmount}}" readonly>
                        </div>

                    </div>
                    <br>
                    <br>

                    {{#if cartlen}}

                    <a class="btn btn-danger " style="width: 250px;" href="/checkout">Proceed TO Checkout</a>
                    <a class="btn btn-danger ml-5" style="width: 250px;" href="/home">Continue</a>
                    {{else}}
                    <a class="btn btn-danger ml-5" style="width: 250px;" href="/home">Continue</a>
                    {{/if}}




                </div>
            </div>
