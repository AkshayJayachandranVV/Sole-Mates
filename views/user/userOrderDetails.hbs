<body>

    {{> user_Header}}

    <main>
        <!-- Hero Area Start-->
        <div class="slider-area ">
            <div class="single-slider slider-height2 d-flex align-items-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="hero-cap text-center">
                                <h2>Order Details</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Hero Area End-->



        <!--================Single Product Area =================-->





        <div class="product_image_area  ">
            <div class="container">
                <div style="margin-top: -120px;">
                    <div class="success">
                        <div class="success__icon">
                            <!-- Font Awesome coupon icon -->
                            <i class="fas fa-tags"></i>
                        </div>
                        <div class="success__title">
                            <h5>Coupon Applied:{{couponAmount}} </h5>
                        </div>
                        <div class="success__close"></div>
                    </div>

                    <br>
                    <br>
                    <div class="info" style="margin-left: 400px;margin-top: -105px;">
                        <div class="info__icon">
                            <!-- Font Awesome wallet icon -->
                            <i class="fas fa-wallet"></i>
                        </div>
                        <div class="info__title">
                            <h5>Wallet Applied:{{walletAmount}}</h5>
                        </div>
                        <div class="info__close"></div>
                    </div>
                    <div style="margin-left: 820px;margin-top: -60px;">
                      {{#ifEquals productOrder.[0].status "DELVERED"}}
                                    <a class="btn btn-info" href="/invoice?orderId={{ productOrder.[0].orderId}}">Invoice
                                        Download</a>
                                    {{else}}
                                    <a class="btn btn-info" href="javascript:void(0)" onclick="return false;"
                                        style="color: #999; pointer-events: none; text-decoration: none; cursor: not-allowed;">Invoice
                                        Download</a>

                                    {{/ifEquals}}
                       </div>
                    <br>
                    <br>
                </div>


                <div class="container mt-5">

                    <h2>Order Details</h2>

                    <div class="row">

                        {{#each productOrder}}

                        <div class="col-md-8">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <img src="{{this.image}}" alt="Product Image" style="height:500px">
                                    <br>
                                    <br>
                                    <h4 class="card-title">Order ID:<p id="getorderid">{{this.orderId}}</p>
                                    </h4>
                                    <p class="card-text">Order Date: {{formatDate this.orderdate}}</p>
                                    <h6 class="card-title">Status: {{this.status}} </h6>

                                    <!-- Product List -->
                                    <h5 class="mt-4 mb-3">Products</h5>
                                    <ul class="list-group">
                                        <li class="list-group-item">Product:<p id="getproductname">{{this.productname}}
                                            </p>
                                        </li>
                                        <li class="list-group-item">Quantity:{{this.quantity }} </li>
                                        <!-- Add more items as needed -->
                                    </ul>
                                    
                                    <h5 class="mt-4">Total Price: {{this.price}}</h5>
                                </div>
                                <div>
                                    {{#ifEquals this.status "Payment Failure"}}
                                    <h4 class="cancel-p" style="color: red;">Payment Failure</h4>
                                    {{else}}
                                    {{#ifNotEquals this.status "DELVERED"}}
                                    {{#ifEquals this.status "CANCELLED"}}
                                    <h4 class="cancel-p" style="color: red;">Order Cancelled</h4>
                                    {{else}}
                                    {{#ifEquals this.status "RETURN ACCEPTED"}}
                                    {{else}}
                                    <button class="btn btn-primary ml-200"><a
                                            href="/cancelorder?orderId={{this.orderId}}&proId={{this.productname}}"
                                            onclick="return confirm('Are you sure you want to Cancel')">Cancel</a></button>
                                    {{/ifEquals}}

                                    {{/ifEquals }}
                                    {{/ifNotEquals }}

                                    {{#ifEquals this.status "REQUEST TO RETURN"}}
                                    <h4 class="return-p" style="color: red;">REQUEST TO RETURN</h4>
                                    {{else}}

                                    {{#ifEquals this.status "RETURN ACCEPTED"}}
                                    <h4 class="cancel-p" style="color:green;margin-left:340px;margin-top:-40px">RETURN
                                        ACCEPTED</h4>

                                    {{else ifEquals this.status "RETURN REJECTED"}}
                                    <h4 class="return-p" style="color: red;">RETURN REJECTED</h4>
                                    {{!-- <button o class="btn btn-primary ml-40">Return Order</button> --}}
                                    {{else}}
                                    {{#ifEquals this.status "DELVERED"}}
                                    <button type="button" class="btn btn-primary" data-toggle="modal"
                                        data-target="#exampleModal{{@key}}">
                                        Return Order
                                    </button>

                                    <!-- Modal -->

                                    <form action="/returnorder?orderId={{this.orderId}}&proId={{this.productname}}"
                                        method="post">
                                        <div class="modal fade" id="exampleModal{{@key}}" tabindex="-1" role="dialog"
                                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Return</h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="form-group">
                                                            <label class="form-control-label">Reason For Return</label>
                                                            <input type="text" name="reason" placeholder="Return Reason"
                                                                class="form-control" value="">
                                                        </div>

                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-dismiss="modal">Close</button>
                                                        <button type="submit" class="btn btn-primary">Submit</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                    {{/ifEquals}}
                                    {{/ifEquals }}
                                    {{/ifEquals }}
                                    {{/ifEquals }}
                                </div>
                            </div>
                        </div>


                        {{/each}}


                        <div class="col-md-4 ">
                            <div class="card mb-200">
                                <div class="card-body">
                                    <h5 class="card-title">Shipping Address</h5>
                                    <p class="card-text">Name:{{productOrder.[0].username}}</p>
                                    <p class="card-text">State:{{productOrder.[0].address.state}}</p>
                                    <p class="card-text">City: {{productOrder.[0].address.city}}</p>
                                    <p class="card-text">Housename: {{productOrder.[0].address.housename}}</p>
                                </div>
                            </div>



                            <!-- Additional Information (Billing/Shipping Address, etc.) -->



                        </div>
                          
                    </div>
                    {{!-- {{/each}} --}}
                </div>


            </div>
        </div>



        <!--================End Single Product Area =================-->



        <!-- subscribe part here -->
        <section class="subscribe_part section_padding">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="subscribe_part_content">
                            <h2>Get promotions & updates!</h2>
                            <p>Seamlessly empower fully researched growth strategies and interoperable internal or
                                “organic” sources credibly innovate granular internal .</p>
                            <div class="subscribe_form">
                                <input type="email" placeholder="Enter your mail">
                                <a href="#" class="btn_1">Subscribe</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- subscribe part end -->
