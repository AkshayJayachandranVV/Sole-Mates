                <div class="container profile-container">
                    <div class="container mt-5 ">

                        <div class="profile-details">

                            <h1 class="mb-4">User Profile</h1>

                            <form action="/updateProfile" method="post" class="needs-validation" novalidate>
                                <div class="form-group">
                                    <label class="name" for="name"><strong>Name:</strong></label>
                                    <input type="text" id="name" name="name" class="form-control"
                                        value="{{userData.username}}" readonly>
                                    <div class="invalid-feedback">Please enter your name.</div>
                                </div>

                                <div class="form-group">
                                    <label class="name" for="email"><strong>Email:</strong></label>
                                    <input type="email" id="email" name="email" class="form-control"
                                        value="{{userData.email}}" readonly>
                                    <div class="invalid-feedback">Please enter a valid email address.</div>

                                </div>
                                <div class="form-group">
                                    <label class="name" for="phone"><strong>Phone:</strong></label>
                                    <input type="tel" id="phone" name="phone" class="form-control"
                                        value="{{userData.phonenumber}}" readonly>
                                    <div class="invalid-feedback">Please enter a valid phone number.</div>
                                </div>
                                   <div class="form-group">
                                    <label class="name" for="phone"><strong>Wallet:</strong></label>
                                    <input type="tel" id="phone" name="phone" class="form-control"
                                        value="{{userData.wallet}}" readonly>
                                </div>
                                {{#if userAddress.address}}
                                <div class="form-group">
                                    <label class="name1" for="address"><strong>Address:</strong></label>
                                    <input type="tel" id="address" name="address" class="form-control"
                                        value="{{userAddress.address.housename}} {{userAddress.address.city}} {{userAddress.address.district}} {{userAddress.address.pincode}} {{userAddress.address.state}} {{userAddress.address.country}}"
                                        readonly>
                                    <div class="invalid-feedback">Please enter your address.</div>
                                </div>
                                {{/if}}
                            </form>
                            {{#if userAddress}}
                            <button type="button" class="btn btn-outline-primary mb-5 mt-3"><a href="/editprofile">Edit
                                    Profile
                                </a></button>

                            {{else}}
                            <button type="button" class="btn btn-outline-primary mb-5 mt-3"><a href="/addaddress">Add
                                    Address</a></button>
                            {{/if}}
                            <button type="button" class="btn btn-outline-primary mb-5 mt-3"><a
                                    href="/allcollection">Continue
                                    Shoping </a></button>


                        </div>
                    </div>
                </div>
